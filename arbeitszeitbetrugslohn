import tkinter as tk
import time
import threading

STUNDENLOHN = 22.0  # Euro pro Stunde

class StundenTicker:
    def __init__(self, root):
        self.root = root
        self.root.title("Stundenlohn-Ticker")

        self.running = False
        self.gesamt = 0.0

        self.label = tk.Label(root, text="Gesamt: 0.00 €", font=("Arial", 16))
        self.label.pack(pady=10)

        self.start_button = tk.Button(root, text="Start", command=self.start)
        self.start_button.pack(pady=5)

        self.stop_button = tk.Button(root, text="Stopp", command=self.stop)
        self.stop_button.pack(pady=5)

    def start(self):
        if not self.running:
            self.running = True
            threading.Thread(target=self.tick_loop, daemon=True).start()

    def stop(self):
        self.running = False

    def tick_loop(self):
        while self.running:
            time.sleep(3600)  # eine Stunde warten
            if self.running:
                self.gesamt += STUNDENLOHN
                self.label.config(text=f"Gesamt: {self.gesamt:.2f} €")

root = tk.Tk()
app = StundenTicker(root)
root.mainloop()